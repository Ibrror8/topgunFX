<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox  fx:controller="sample.LoginController" alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="200.0" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label text="Welcome to TopGun">
         <font>
            <Font name="Impact" size="26.0" />
         </font>
         <VBox.margin>
            <Insets bottom="30.0" />
         </VBox.margin>
      </Label>
      <TextField fx:id="nameInput" promptText="Username.." />
      <PasswordField fx:id="passInput" promptText="Password.."  onAction="#loginAction"/>
      <Button mnemonicParsing="false"  text="Login" onAction="#loginAction">
         <VBox.margin>
            <Insets top="75.0" />
         </VBox.margin>
      </Button>
      <Label fx:id="isConnected" text="Invalid username or password. Try again." textFill="RED" visible="true">
         <VBox.margin>
            <Insets top="30.0" />
         </VBox.margin>
      </Label>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
